!!!
%html
  %head
  %title Administrator Area
  %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
  = stylesheet_link_tag 'admin.css'

  %body
    #login-container
      #login-header Administrator Area
      #login-content
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .form-item
            .side-label
              = f.label :email
            = f.email_field :email, autofocus: true

          .form-item
            = f.label :password, class: "side-label"
            = f.password_field :password, autocomplete: "off"

          - if devise_mapping.rememberable?
            = f.check_box :remember_me
            = f.label :remember_me

          .actions
            = f.submit "Log In", class: "button"
        = render "devise/shared/links"

    #admin-footer.horizontal-center
      = link_to "Line Icon", "https://www.iconfinder.com/iconsets/linecon"
      %span by
      = link_to "W3 Creative Lab", "https://www.iconfinder.com/setu"
      %span is licensed under the
      = link_to "CC BY 3.0", "http://creativecommons.org/licenses/by/3.0/"
