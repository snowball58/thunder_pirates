%html
  %head
  %title Application Form
  %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
  = stylesheet_link_tag 'application', 'media' => 'all', 'data-turbolinks-track' => true
  = javascript_include_tag 'application', 'data-turbolinks-track' => true

  %body
    %header
      #header-title.center-horizontal Volunteer & Intern Application Form

    %script{:src => "https://www.google.com/recaptcha/api.js"}

    .main-wrapper.horizontal-center
      -if not flash[:notice].blank?
        .notice
          :erb 
            <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
            <%= flash[:notice] %>
      -if not flash[:alert].blank?
        .alert
          :erb 
            <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
            <%= flash[:alert] %>
      .main-header
        = image_tag("logo.png", :alt => 'logo', :id => 'logo', :class => 'center-horizontal')
      .main-content
        = yield
