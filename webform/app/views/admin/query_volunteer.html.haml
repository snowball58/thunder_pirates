.main-title Search Incomplete Applications

= form_tag admin_query_volunteer_path, :method => :post do
	.form-item
		%span.subtitle Filter Applications by Entering a Name:
		= text_field_tag :volunteer_name
		
	.form-item 
		= submit_tag 'Search', :class => "admin-button"


%span.subtitle Incomplete Applications: 
%br
%table
	%thead
		%tr
			%td.subtitle Name
			%td.subtitle Email
	%tbody
	- @volunteers.each do |volunteer|
		%tr
			%td
				= link_to volunteer.Name, admin_show_volunteer_path(volunteer.uniqueID)
			%td 
				= volunteer.EmailAddress
%br
= link_to("Back to Admin Home", auth_user_root_path, :class => "admin-button")